def general_szavak(hossz, prefix=""):
    if hossz == 0:
        print(prefix)
        return
    
    betuk = ['H', 'A', 'P', 'C', 'I']
    for betu in betuk:
        general_szavak(hossz - 1, prefix + betu)

# 5 hossz√∫ szavak gener√°l√°sa
print("Minden 5 hossz√∫ sz√≥ HAPCI bet≈±ib≈ël:")
general_szavak(5)
            </code>

            <div class="result-box">
                <h3>üèÜ V√©geredm√©ny:</h3>
